#include <stdio.h>

int main()
{
    //printf("Hello World");
    int i,j,n;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n-i;j++)
        {
            printf(" ");
        }
        for(j=2;j<=i;j++)
        {
            printf("B");
        }
        for(j=i;j>=i;j--)
        {
            //printf("%c",(char)(j+64));
            printf("A");
        }
        for(j=2;j<=i;j++)
        {
            //printf("%c",(char)(j+64));
            printf("B");
        }
        printf("\n");
    }
    return 0;
}
